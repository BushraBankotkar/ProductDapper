@model ProductDapper.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="updateProductForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Save" class="btn btn-primary" onclick="updateForm(event)"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<style>
    .section-heading {
        margin-top: 20px;
        margin-bottom: 10px;
        padding-bottom: 5px;
        border-bottom: 1px solid #ccc;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .text-right {
        text-align: right;
    }
    </style>
<script>
    function updateForm(event) {
        event.preventDefault(); // Prevent default form submission
        $.ajax({
            url: '@Url.Action("Edit")',
            type: 'POST',
            data: $('#updateProductForm').serialize(),
            success: function (response) {
                alert('Data updated successfully!');

                 window.location.href = '@Url.Action("Index")';
            },
            error: function () {
                alert('An error occurred while submitting the form.');
            }
        });
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
